# Database
# If using Prisma Data Proxy, set DATABASE_URL to the Data Proxy url and keep DIRECT_URL
# pointing to the direct database URL (used for migrations).
# Example:
# DATABASE_URL="prisma://<your-data-proxy-url>"
# DIRECT_URL="postgresql://user:password@localhost:5432/staywise?schema=public"
DATABASE_URL="postgresql://user:password@localhost:5432/staywise?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/staywise?schema=public"

# JWT Authentication
JWT_SECRET_KEY="your-super-secret-jwt-key-min-32-chars"

# CORS Configuration
API_CORS_ORIGIN="http://localhost:3000"

# Web Application URL (for emails and redirects)
NEXT_PUBLIC_WEB_URL="http://localhost:3000"

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Resend (Email Service)
RESEND_API_KEY="re_your_resend_api_key"

# Midtrans (Payment Gateway)
MIDTRANS_SERVER_KEY="your-midtrans-server-key"
MIDTRANS_CLIENT_KEY="your-midtrans-client-key"

# Upstash Redis (for production/Vercel)
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Upstash QStash (Serverless Job Queue)
QSTASH_TOKEN="your-qstash-token"

# API Base URL (for QStash webhooks)
API_BASE_URL="https://your-api-domain.vercel.app"

# Server Configuration
PORT="8000"
NODE_ENV="development"
